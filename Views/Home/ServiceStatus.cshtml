@model List<Programming_7312_Part_1.Models.Issue>
@{
    ViewData["Title"] = "Service Status";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- ... existing head ... -->
</head>
<body>
    <div class="report-container">
        <div class="page-title">
            <h1 class="glowing-text">Service Request Status</h1>
            <p class="subtitle">Track your submitted requests</p>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-info">@ViewBag.Message</div>
        }
        else
        {
            <div class="neon-card">
                <!-- Search by ID -->
                <div class="mb-3">
                    <input type="text" id="searchId" class="form-control neon-input" placeholder="Search by Request ID">
                </div>

                <!-- Table: Uses AVL-sorted data -->
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Category</th>
                            <th>Description</th>
                            <th>Location</th>
                            <th>Status</th>
                            <th>Date</th>
                            <th>Upvotes</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var issue in ViewBag.Issues)
                        {
                            <tr>
                                <td>@issue.Id</td>
                                <td>@issue.Category</td>
                                <td>@issue.Description</td>
                                <td>@issue.Location</td>
                                <td>
                                    <span class="badge @(issue.Status == "Resolved" ? "bg-success" : issue.Status == "In Progress" ? "bg-warning" : "bg-secondary")">@issue.Status</span>
                                </td>
                                <td>@issue.ReportedDate.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@issue.Upvotes</td>
                                <td>
                                    <button class="btn btn-sm btn-primary" onclick="showDetails(@issue.Id)">Details</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        <!-- Modal for Details (Graph Traversal) -->
        <div class="modal fade" id="detailsModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content bg-dark text-white">
                    <div class="modal-header">
                        <h5 class="modal-title">Request Details</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body" id="modalBody">
                        <!-- Populated by JS -->
                    </div>
                </div>
            </div>
        </div>

        <a href="@Url.Action("Index")" class="back-btn">Back to Main</a>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        function showDetails(id) {
            fetch(`/Home/GetIssueDetails?id=${id}`) // New endpoint if needed, or simulate
                .then(response => response.json())
                .then(data => {
                    document.getElementById('modalBody').innerHTML = `
                        <p><strong>ID:</strong> ${data.id}</p>
                        <p><strong>Description:</strong> ${data.description}</p>
                        <p><strong>Status:</strong> ${data.status}</p>
                        <p><strong>Dependencies (BFS Path):</strong> ${data.dependencyPath.join(' â†’ ')}</p>
                    `;
                    new bootstrap.Modal(document.getElementById('detailsModal')).show();
                });
        }

        // Search filter (client-side)
        document.getElementById('searchId').addEventListener('input', function() {
            const filter = this.value;
            const rows = document.querySelectorAll('tbody tr');
            rows.forEach(row => {
                row.style.display = row.cells[0].textContent.includes(filter) ? '' : 'none';
            });
        });
    </script>
</body>
</html>