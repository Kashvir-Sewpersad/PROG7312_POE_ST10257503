@{
    ViewData["Title"] = "Create Announcement";
}

@model Programming_7312_Part_1.Models.Announcement

<div class="report-container">
    <div class="page-title">
        <h1 class="glowing-text">Create New Announcement</h1>
        <p class="subtitle">Add an important announcement for the community</p>
    </div>

    <div class="neon-card">
        <form method="post" action="@Url.Action("CreateAnnouncement")" asp-antiforgery="true">
            <div class="mb-3">
                <label for="Title" class="form-label">Title</label>
                <input type="text" class="form-control neon-input" id="Title" name="Title" required maxlength="200">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Content" class="form-label">Content</label>
                <textarea class="form-control neon-input" id="Content" name="Content" rows="5" required maxlength="2000"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Category" class="form-label">Category</label>
                <input type="text" class="form-control neon-input" id="Category" name="Category" list="categoryList">
                <datalist id="categoryList">
                    @if (ViewBag.Categories != null)
                    {
                        foreach (string category in ViewBag.Categories)
                        {
                            <option value="@category">@category</option>
                        }
                    }
                    <option value="Maintenance">Maintenance</option>
                    <option value="Community">Community</option>
                    <option value="Emergency">Emergency</option>
                    <option value="General">General</option>
                </datalist>
            </div>

            <div class="mb-3">
                <label for="Priority" class="form-label">Priority</label>
                <select class="form-select neon-select" id="Priority" name="Priority" required>
                    <option value="1">Low</option>
                    <option value="2">Medium</option>
                    <option value="3" selected>High</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="ExpiryDate" class="form-label">Expiry Date (Optional)</label>
                <input type="datetime-local" class="form-control neon-input" id="ExpiryDate" name="ExpiryDate" value="">
                <small class="form-text text-muted">Leave empty for no expiry</small>
            </div>

            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="IsActive" name="IsActive" checked>
                <label class="form-check-label" for="IsActive">Active</label>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary neon-button">Create Announcement</button>
                <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-outline-light neon-button">Cancel</a>
            </div>
        </form>
    </div>
</div>