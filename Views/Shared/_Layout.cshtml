<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Programming_7312_Part_1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Programming_7312_Part_1.styles.css" asp-append-version="true" />

    <!--  video background -->
    <style>
        
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        /* Blue background with transition */
        body {
            background: linear-gradient(135deg, #0a0a2e 0%, #1a1a4e 50%, #16213e 100%);
            transition: background 2s ease-in-out;
        }

        /* Adjust content to be more visible  */
        body {
            color: white;
            min-height: 100vh;
            position: relative;
        }

        .navbar {
            background-color: rgba(0, 0, 0, 0.7) !important;
            position: relative;
            z-index: 1;
        }

        .navbar-brand, .nav-link {
            color: white !important;
        }

        .navbar-light .navbar-nav .nav-link:hover {
            color: #f0f0f0 !important;
        }

        .container {
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 10px;
            padding: 20px;
            margin-top: 20px;
            position: relative;
            z-index: 1;
        }

        .footer {
            background-color: rgba(0, 0, 0, 0.7) !important;
            color: white !important;
            position: relative;
            z-index: 1;
        }

        .form-control, .form-control-file, .btn {
            background-color: rgba(255, 255, 255, 0.9);
            color: black;
        }

        .btn-primary {
            background-color: rgba(37, 140, 251, 0.8);
            border-color: rgba(37, 140, 251, 0.8);
        }

            .btn-primary:hover {
                background-color: rgba(37, 140, 251, 1);
                border-color: rgba(37, 140, 251, 1);
            }

        .btn-secondary {
            background-color: rgba(108, 117, 125, 0.8);
            border-color: rgba(108, 117, 125, 0.8);
        }

            .btn-secondary:hover {
                background-color: rgba(108, 117, 125, 1);
                border-color: rgba(108, 117, 125, 1);
            }

        .alert-success {
            background-color: rgba(40, 167, 69, 0.8);
            border-color: rgba(40, 167, 69, 0.8);
        }

        .progress {
            background-color: rgba(255, 255, 255, 0.3);
        }

    </style>
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Programming_7312_Part_1</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
           Municipal Service 2025 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>